<%- include('../partials/head.ejs') %>
<main>
    <%- include('../partials/navigation.ejs') %>

    <div class="container mx-6xl mx-auto py-6 flex flex-col gap-4 items-center">
        <h1 class="text-3xl uppercase"><%= product.title %></h1>
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="block w-1/4">
        <h3 class="text-3xl  font-extrabold">$ <%= product.price %></h3>
        <p><%= product.description %></p>

        <form action="/add-to-cart">
            <button type="submit"
                    class=" border-green-500 p-1 rounded border-2 hover:text-gray-100 hover:bg-green-500 mt-8">
                Add To Cart
            </button>
        </form>
    </div>
</main>
<%- include('../partials/end.ejs') %>
