<%- include('../partials/head.ejs') %>

<main>
    <%- include('../partials/navigation.ejs') %>


    <form class="max-w-sm mx-auto py-6" method="POST"
          action="<%= isEditMode ? '/admin/edit-product' : '/admin/add-product' %>">


        <div>
            <label for="product-name">Title</label>
            <input type="text" name="title" class="w-full border border-green-500 p-2 mt-2 block rounded"
                   value="<%= isEditMode ? product.title : '' %>">
        </div>

        <div>
            <label for="product-name">Image URL</label>
            <input type="text" name="imageUrl" class="w-full border border-green-500 p-2 mt-2 block rounded"
                   value="<%= isEditMode ? product.imageUrl : '' %>">
        </div>

        <div>
            <label for="product-name">Price</label>
            <input type="number" name="price" step="any" class="w-full border border-green-500 p-2 mt-2 block rounded"
                   value="<%= isEditMode ? product.price : '' %>">
        </div>

        <div>
            <label for="product-name">Description</label>
            <textarea name="description" cols="10" rows="4"
                      class="w-full border border-green-500 p-2 mt-2 block rounded"> <%= isEditMode ? product.description : '' %></textarea>
        </div>


        <button type="submit"
                class="mt-4 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            <%= isEditMode ? 'Edit' : 'Submit' %>
        </button>

        <% if(isEditMode){ %>
            <input type="hidden" name="productId" value="<%= product.id %>">
        <% } %>
    </form>
</main>
<%- include('../partials/end.ejs') %>
