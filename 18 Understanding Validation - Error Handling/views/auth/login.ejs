<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <% if(message){ %>
        <p class="message message-error"><%= message %> </p>
    <% } %>
    <form class="login-form" action="/login" method="POST" novalidate>
        <div class="form-control">
            <label for="email">E-Mail</label>
            <input type="email" name="email" id="email" value="<%= prevInputData.email %>">
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" value="<%= prevInputData.password %>">
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn" type="submit">Login</button>


        <br>
        <br>
        <div><a href="/reset">Reset Password</a></div>

    </form>
</main>
<%- include('../includes/end.ejs') %>