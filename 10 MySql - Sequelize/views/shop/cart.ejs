<body>
<%- include('../includes/navigation.ejs') %>
<%- include('../includes/end.ejs') %>

<main>
    <% if(products.length){ %>
        <% for(let i = 0; i < products.length; i++) { %>
            <li><%= products[i].title %> (<strong><%= products[i].cartItems.quantity %> </strong>)
                (Total Price = <%= products[i].price * products[i].cartItems.quantity %> )

                <form action="/delete-cart-product" method="POST">
                    <button class="btn">Delete</button>
                    <input type="hidden" name="productId" value="<%= products[i].cartItems.productId %>">
                </form>
            </li>
        <% } %>
    <% } %>
    <% if(products.length <= 0 ){ %>
        <h1>No Products Found</h1>
    <% } %>
</main>

<%- include('../includes/end.ejs') %>